# Development environment configuration example
# Copy this file to .env and modify the values as needed

# Flask Configuration
FLASK_APP=app
FLASK_ENV=development  # Use 'production' in production environment

# Security
SECRET_KEY=your-secret-key-please-change-in-production

# Database
DATABASE_URL=sqlite:////app/instance/data.db

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password-in-production
ADMIN_EMAIL=admin@yourdomain.com

# Server Configuration
PORT=5001

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
